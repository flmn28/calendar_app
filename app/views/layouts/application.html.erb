<!DOCTYPE html>
<html>
<head>
  <title>CalendarApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <% if user_signed_in? %>
      <div class="navbar-header">
        <button class="navbar-toggle" data-toggle="collapse" data-target=".target">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "CalendarApp", user_path(current_user.id), method: :get, class: "navbar-brand" %>
      </div>

      <div class="collapse navbar-collapse target">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "マイページ", user_path(current_user.id), method: :get %></li>
          <li><%= link_to "グループページ", users_path, method: :get %></li>
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown">
                ユーザー設定 <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "アカウント編集", edit_user_registration_path, method: :get %></li>
                <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
              </ul>
          </li>
        </ul>
      </div>
    <% else %>
      <div class="navbar-header">
        <button class="navbar-toggle" data-toggle="collapse" data-target=".target">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <span class="navbar-brand">CalendarApp</span>
      </div>
      <div class="collapse navbar-collapse target">
        <ul class="nav navbar-nav navbar-right">
          <% if controller_name != 'sessions' %>
            <li><%= link_to "ログイン", new_session_path(resource_name) %></li>
          <% else %>
            <li><%= link_to "アカウント登録", new_registration_path(resource_name) %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  </div>
</nav>

<div class="container">
  <%= yield %>
</div>

</body>
</html>
